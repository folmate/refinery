{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2022"],
    "types": ["node"],
    "emitDeclarationOnly": true,
    "outDir": "build/typescript/node"
  },
  "include": [
    ".eslintrc.cjs",
    "config/*.ts",
    "config/*.cjs",
    "prettier.config.cjs",
    "scripts/*.mjs",
    "types/node",
    "vite.config.ts"
  ],
  "references": [
    { "path": "./tsconfig.shared.json" }
  ]
}
